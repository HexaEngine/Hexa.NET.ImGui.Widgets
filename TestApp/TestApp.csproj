<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFrameworks>net9.0;net472</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<LangVersion>12</LangVersion>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
	</PropertyGroup>
	
	<ItemGroup>
		<None Remove="assets\fileTypes.json" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Hexa.NET.ImPlot" Version="2.2.8.4" />
		<PackageReference Include="Hexa.NET.OpenGL3" Version="1.1.0" />
		<PackageReference Include="Hexa.NET.SDL2" Version="1.2.14" />
		<PackageReference Include="Hexa.NET.ImGui.Backends" Version="1.0.17.4" />
		<PackageReference Include="Hexa.NET.ImGui.Backends.SDL2" Version="1.0.17.4" />
		<PackageReference Include="Hexa.NET.Math" Version="2.0.6" />
		<PackageReference Include="HexaGen.Runtime" Version="1.1.21" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Hexa.NET.ImGui.Widgets\Hexa.NET.ImGui.Widgets.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Update="assets\fonts\arialuni.ttf">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Update="assets\fonts\MaterialSymbolsRounded.ttf">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Update="test.txt">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
